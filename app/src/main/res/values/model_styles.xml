<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoadingDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowMinWidthMajor">50%</item>
        <item name="windowMinWidthMinor">50%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground"></item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="LoaderLayout">
        <attr name="LoadingImage" format="reference" />
        <attr name="LoadErrImage" format="reference" />
        <attr name="LoadNoDataImage" format="reference" />
        <attr name="LoadingText" format="string|reference" />
        <attr name="LoadErrText" format="string|reference" />
        <attr name="LoadNoDataText" format="string|reference" />
    </declare-styleable>

</resources>

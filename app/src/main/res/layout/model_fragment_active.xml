<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_active_fragment"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="?attr/actionBarSize"
            app:tabGravity="center"
            app:tabTextAppearance="@style/ActiveTabLayoutTextSizeStyle"
            app:tabIndicatorColor="@color/yellow_f3802c"
            app:tabIndicatorHeight="@dimen/dp_4"
            app:tabSelectedTextColor="@color/yellow_f3802c"
            app:tabTextColor="@color/black_333333" />
    </LinearLayout>

    <com.lingkj.android.edumap.customview.NoScrollViewPager
        android:id="@+id/vp_active_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>